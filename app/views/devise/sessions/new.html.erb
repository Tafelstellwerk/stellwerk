<div class="row">
  <div class="small-2 large-6 columns">

    <h2 class="mb20">Einloggen</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, placeholder: "Ihre Email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Ihr Passwort" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field mb20">
          <%= f.check_box :remember_me %>
          <label for="user_remember_me">Eingeloggt bleiben</label>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <% render "devise/shared/links" %>


  </div>
</div>

